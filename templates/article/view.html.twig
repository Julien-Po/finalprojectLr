{% block head %}
<link rel="stylesheet" href="{{asset('assets/styles/app.css')}}">
{% endblock %}

{% block body %}
{% for articles in article %}
<div class="articleGrid">
    <div>
        <p class="articleTitle">{{articles.title}}</p>  
    </div>
    <div>
        <p class="articleAuthor">{{articles.author}}</p>
    </div>
    <div>
        <p class="articleContent">{{articles.content}}</p> 
    </div>
    <div>
        <img src="{{ vich_uploader_asset(articles, 'imageFile') }}">
    </div> 
    <div>
        <a href="{{path('delete_article', { id: article.id}) }}">Supprimer</a>
    </div>
    <div>
        <a href="{{path('edit_article', { id: article.id}) }}">Modifier</a>
    </div>
</div>


     

{# <div>
<a href="{{path('each_article', {"id" : article.id}) }}"></a>
</div> #}
{% endfor %}
{% endblock %}